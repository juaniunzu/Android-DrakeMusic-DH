<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/celdaHistorialIVBusqueda"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="23dp"
        android:src="@drawable/ic_search_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvceldahistorial"
        style="@style/celdahome_album_artista_celda"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="texto busqueda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/celdaHistorialIVBusqueda"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/celdaHistorialBorrarBusquedaIndividual"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/ic_delete_forever_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>