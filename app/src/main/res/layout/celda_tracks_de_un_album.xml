<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp">

    <TextView
        android:id="@+id/celdaTracksDeUnAlbum_NombreDelTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nombre del Tema"
        android:textSize="20sp"
        android:textColor="@color/text_subtitles"
        app:layout_constraintStart_toEndOf="@+id/celdaTracksDeUnAlbum_NumeroDelTrack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaTracksDeUnAlbum_NumeroDelTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num."
        android:textColor="@color/text_subtitles"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaTracksDeUnAlbum_DuracionDelTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duracion"
        android:textColor="@color/text_subtitles"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/celdaTracksDeUnAlbum_NombreDelTrack"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>