<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/celdahome_cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/celdaultimosReproducidos_ImageviewTrackAlbum"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/celdaultimosReproducidos_textviewNombreDelTrack"
            style="@style/celdahome_titulo_celda"
            app:layout_constraintStart_toStartOf="@id/celdaultimosReproducidos_ImageviewTrackAlbum"
            app:layout_constraintTop_toBottomOf="@id/celdaultimosReproducidos_ImageviewTrackAlbum" />

        <TextView
            android:id="@+id/celdaUltimosReproducidos_TextViewAlbumRecomendado"
            style="@style/celdahome_album_artista_celda"
            android:text="Artista"
            app:layout_constraintStart_toStartOf="@id/celdaultimosReproducidos_ImageviewTrackAlbum"
            app:layout_constraintTop_toBottomOf="@id/celdaultimosReproducidos_textviewNombreDelTrack" />

        <TextView
            android:id="@+id/celdaUltimosReproducidos_separador"
            style="@style/celdahome_album_artista_celda"
            android:text=" Â· "
            app:layout_constraintStart_toEndOf="@id/celdaUltimosReproducidos_TextViewAlbumRecomendado"
            app:layout_constraintTop_toBottomOf="@id/celdaultimosReproducidos_textviewNombreDelTrack" />

        <TextView
            android:id="@+id/celdaUltimosReproducidos_TextViewArtistaRecomendado"
            style="@style/celdahome_album_artista_celda"
            android:text="Album"
            app:layout_constraintStart_toEndOf="@id/celdaUltimosReproducidos_separador"
            app:layout_constraintTop_toBottomOf="@id/celdaultimosReproducidos_textviewNombreDelTrack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>