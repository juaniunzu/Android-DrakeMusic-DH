<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DetailTrackFragment"
    android:background="@color/primary"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fdetailtvtitulo"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:src="@drawable/charizard_tomando_cafe"
        android:id="@+id/fdetailivtrack"
        />
    <TextView
        android:id="@+id/fdetailtvtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fdetailivtrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fdetailtvduracion"
        android:maxLines="3"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:background="@color/primary_elevation"
        android:text="@string/template_titulo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_title_home"/>

    <TextView
        android:id="@+id/fdetailtvduracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fdetailtvtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fdetailtvartista"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:background="@color/primary_elevation"
        android:text="@string/template_duracion"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_title_home"/>

    <TextView
        android:id="@+id/fdetailtvartista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fdetailtvduracion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fdetailtvalbum"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:background="@color/primary_elevation"
        android:text="@string/template_artista"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_title_home"/>

    <TextView
        android:id="@+id/fdetailtvalbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fdetailtvartista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guiah80"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:background="@color/primary_elevation"
        android:text="@string/template_album"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_title_home"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiah80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80">
    </androidx.constraintlayout.widget.Guideline>


</androidx.constraintlayout.widget.ConstraintLayout>