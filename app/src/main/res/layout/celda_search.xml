<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/celdaSearchImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/celdaSearchTextViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/template_titulo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/celdaSearchImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaSearchTextViewDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Descripcion"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/celdaSearchImageView"
        app:layout_constraintTop_toBottomOf="@id/celdaSearchTextViewTitulo" />


</androidx.constraintlayout.widget.ConstraintLayout>