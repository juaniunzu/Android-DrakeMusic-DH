<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="celdahome_cardview">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="celdahome_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="celdahome_imageview">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="celdahome_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_subtitles</item>
    </style>


</resources>